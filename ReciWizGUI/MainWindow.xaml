<Window x:Class="ReciWizGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReciWizGUI"
        mc:Ignorable="d"
        Title="ReciWiz" Height="720" Width="1080">

    <DockPanel Name="Root">
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden">
            <StackPanel Name="BookPanel" Background="SlateGray" DockPanel.Dock="Left">

                <Button Width="200" Height="50" >
                    CookbookOne
                </Button>
            
            </StackPanel>
        </ScrollViewer>

        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden">
            <StackPanel Name="RecipePanel" Background="LightGray" DockPanel.Dock="Left">
                <Button Width="200" Height="25">
                    Recipe one
                </Button>
            </StackPanel>
        </ScrollViewer>

        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden" Background="LightGray">
            <Frame NavigationUIVisibility="Hidden" Name="ViewHolder">

            </Frame>
        </ScrollViewer>
        
    </DockPanel>
</Window>
